<Window
    x:Class="EmailClientPluma.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:EmailClientPluma.Behaviors"
    xmlns:converters="clr-namespace:EmailClientPluma.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:EmailClientPluma.MVVM.ViewModels"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="Pluma Mail"
    Width="900"
    Height="550"
    Background="#F7F4FB"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
        <!--  Color palette  -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F7F4FB" />
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#FAF8FF" />
        <SolidColorBrush x:Key="PrimaryBrush" Color="#7E57C2" />
        <SolidColorBrush x:Key="TextBrush" Color="Black" />
        <SolidColorBrush x:Key="ButtonForegroundBrush" Color="White" />
        <SolidColorBrush x:Key="DarkPurple" Color="#5E35B1" />
        <SolidColorBrush x:Key="LightPurple" Color="#D1C4E9" />

        <!--  Button style  -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="5,0,5,0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            SnapsToDevicePixels="True">
                            <ContentPresenter
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource DarkPurple}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  ListView style  -->
        <Style TargetType="ListView">
            <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource LightPurple}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <!--  TextBlock style  -->
        <Style TargetType="TextBlock">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        </Style>
        <!--  Text box style  -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        </Style>
        <!--  Grid style  -->
        <Style TargetType="Grid">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
        </Style>
        <!--  Stack panel style  -->
        <Style TargetType="StackPanel">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
        </Style>
        <!--  Border style  -->
        <Style x:Key="WebViewContainerStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
        </Style>

        <Style x:Key="CustomCombo" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
        </Style>

        <Style x:Key="CustomComboItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Filter  -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition x:Name="CenterColumn" Width="5*" />
                <ColumnDefinition x:Name="RightColumn" Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel>
                    <Button
                        Margin="0,0,0,2"
                        Command="{Binding NewLabelCommand}"
                        Content="Edit labels" />
                    <Button  Margin="0,0,0,2"
                             Command="{Binding RefreshEmailCommand}">Refresh</Button>
                </StackPanel>
               
                <TextBlock
                    Grid.Row="1"
                    Margin="0,5"
                    FontWeight="Bold"
                    Text="Labels" />
                <ListView
                    Grid.Row="2"
                    VerticalAlignment="Stretch"
                    ItemsSource="{Binding SelectedAccount.OwnedLabels, FallbackValue=[]}"
                    SelectedItem="{Binding SelectedLabel}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}">
                                <TextBlock.Foreground>
                                    <SolidColorBrush Color="{Binding Color}" />
                                </TextBlock.Foreground>
                            </TextBlock>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Grid>

            <!--  Center panel  -->
            <Border
                Grid.Column="1"
                Margin="0,0,10,0"
                Padding="8"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource LightPurple}"
                BorderThickness="1"
                CornerRadius="8">
                <Grid>
                    <ListView
                        x:Name="EmailList"
                        Grid.Row="2"
                        Margin="0,0,0,0"
                        ItemsSource="{Binding FilteredEmails}"
                        SelectedItem="{Binding SelectedEmail}"
                        SelectionChanged="EmailList_SelectionChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="2"
                                    Padding="6"
                                    Background="White"
                                    BorderThickness="0.5"
                                    CornerRadius="5">
                                    <TextBlock
                                        Foreground="{DynamicResource TextBrush}"
                                        Text="{Binding MessageParts.Subject}"
                                        TextTrimming="CharacterEllipsis" />
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!--  Right panel  -->
            <Border
                x:Name="RightPanel"
                Grid.Column="2"
                Background="White"
                BorderBrush="{DynamicResource PanelBackgroundBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Toolbar  -->
                    <Button
                        x:Name="CloseBtn"
                        Grid.Row="1"
                        Width="50"
                        HorizontalAlignment="Left"
                        Click="CloseBtn_Click"
                        Content="Close" />
                    <StackPanel
                        Grid.Row="1"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button Command="{Binding ReplyCommand}">Reply</Button>
                        <Button Command="{Binding EditEmailLabelCommand}">Edit labels</Button>
                    </StackPanel>

                    <!--  Email header  -->
                    <Border
                        Grid.Row="0"
                        Margin="8"
                        Padding="10"
                        Background="#FFF7F7FF"
                        BorderBrush="#22000000"
                        BorderThickness="1"
                        CornerRadius="6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <!--  Date  -->
                                <RowDefinition Height="Auto" />
                                <!--  From  -->
                                <RowDefinition Height="Auto" />
                                <!--  To  -->
                                <RowDefinition Height="Auto" />
                                <!--  Subject  -->
                                <RowDefinition Height="Auto" />
                                <!--  Tags  -->
                            </Grid.RowDefinitions>
                            <!--  Date  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,6,2"
                                FontWeight="Bold"
                                Text="Date:" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,0,0,2"
                                Text="{Binding SelectedEmail.MessageParts.DateDisplay}"
                                TextTrimming="CharacterEllipsis" />
                            <!--  From  -->
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,6,2"
                                FontWeight="Bold"
                                Text="From:" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,0,0,2"
                                Text="{Binding SelectedEmail.MessageParts.From}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap" />
                            <!--  To  -->
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,0,6,2"
                                FontWeight="Bold"
                                Text="To:" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="0,0,0,2"
                                Text="{Binding SelectedEmail.MessageParts.To}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap" />
                            <!--  Subject  -->
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                Margin="0,4,6,2"
                                FontWeight="Bold"
                                Text="Subject:" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="0,4,0,2"
                                FontWeight="SemiBold"
                                Text="{Binding SelectedEmail.MessageParts.Subject}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap" />
                            <!--  Tags label  -->
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="0"
                                Margin="0,4,6,0"
                                VerticalAlignment="Center"
                                FontStyle="Italic"
                                FontWeight="Light"
                                Text="Labels:"
                                TextAlignment="Center" />

                            <ItemsControl
                                Grid.Row="4"
                                Grid.Column="1"
                                Margin="0,4,0,0"
                                ItemsSource="{Binding SelectedEmail.Labels}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="0,0,6,4"
                                            Padding="6,2"
                                            Background="#FFE2E6F5"
                                            BorderBrush="#33000000"
                                            BorderThickness="1"
                                            CornerRadius="10">
                                            <TextBlock
                                                FontWeight="Bold"
                                                Foreground="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
                                                Text="{Binding Name}" />
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                    <!--  Body  -->
                    <Border
                        Grid.Row="2"
                        Margin="0,10,0,0"
                        Style="{StaticResource WebViewContainerStyle}">
                        <wv2:WebView2 behaviors:WebView2Html.Html="{Binding SelectedEmail.MessageParts.Body}" />
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!--  Search  -->
        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock FontWeight="Bold" Text="Search Mail" />
            <TextBox
                Width="200"
                Margin="10,0,0,0"
                Text="{Binding Filters.SearchText, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                x:Name="MoreSearch"
                Click="MoreSearch_Click"
                Content="..." />
            <Popup
                x:Name="MoreSearchPopup"
                Placement="Bottom"
                PlacementTarget="{Binding ElementName=MoreSearch}"
                PopupAnimation="Scroll"
                StaysOpen="False">
                <Border>
                    <StackPanel Margin="0,0,0,0">
                        <!--  From  -->
                        <StackPanel Margin="0,5" Orientation="Horizontal">
                            <TextBlock
                                Width="100"
                                VerticalAlignment="Center"
                                Text="From" />
                            <TextBox Width="300" Text="{Binding Filters.From, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <!--  To  -->
                        <StackPanel Margin="0,5" Orientation="Horizontal">
                            <TextBlock
                                Width="100"
                                VerticalAlignment="Center"
                                Text="To" />
                            <TextBox Width="300" Text="{Binding Filters.To, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <!--  Subject  -->
                        <StackPanel Margin="0,5" Orientation="Horizontal">
                            <TextBlock
                                Width="100"
                                VerticalAlignment="Center"
                                Text="Subject" />
                            <TextBox Width="300" Text="{Binding Filters.Subject, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <!--  Has the words  -->
                        <StackPanel Margin="0,5" Orientation="Horizontal">
                            <TextBlock
                                Width="100"
                                VerticalAlignment="Center"
                                Text="Has the words" />
                            <TextBox Width="300" Text="{Binding Filters.HasWords, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <!--  Doesn’t have  -->
                        <StackPanel Margin="0,5" Orientation="Horizontal">
                            <TextBlock
                                Width="100"
                                VerticalAlignment="Center"
                                Text="Doesn’t have" />
                            <TextBox Width="300"
                                     Text="{Binding Filters.DoesNotHave, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <!--  Size  -->
                        <StackPanel Margin="0,5" Orientation="Horizontal">
                            <TextBlock
                                Width="100"
                                VerticalAlignment="Center"
                                Text="Size" />
                            <ComboBox
                                Width="100"
                                ItemContainerStyle="{StaticResource CustomComboItem}"
                                SelectedIndex="{Binding Filters.SizeOperatorIndex, Mode=TwoWay}"
                                Style="{StaticResource CustomCombo}">
                                <ComboBoxItem Content="greater than" />
                                <ComboBoxItem Content="less than" />
                            </ComboBox>
                            <TextBox
                                Width="60"
                                Margin="10,0"
                                Text="{Binding Filters.SizeValue, UpdateSourceTrigger=PropertyChanged}" />
                            <ComboBox
                                Width="70"
                                ItemContainerStyle="{StaticResource CustomComboItem}"
                                SelectedIndex="{Binding Filters.SizeUnitIndex, Mode=TwoWay}"
                                Style="{StaticResource CustomCombo}">
                                <ComboBoxItem Content="MB" />
                                <ComboBoxItem Content="KB" />
                            </ComboBox>
                        </StackPanel>

                        <!--  Date  -->
                        <StackPanel Margin="0,5" Orientation="Horizontal">
                            <TextBlock
                                Width="100"
                                VerticalAlignment="Center"
                                Text="Date within" />
                            <ComboBox
                                Width="150"
                                ItemContainerStyle="{StaticResource CustomComboItem}"
                                SelectedIndex="{Binding Filters.DateRangeIndex, Mode=TwoWay}"
                                Style="{StaticResource CustomCombo}">
                                <ComboBoxItem Content="1 day" />
                                <ComboBoxItem Content="1 week" />
                                <ComboBoxItem Content="1 month" />
                            </ComboBox>
                            <DatePicker
                                Width="120"
                                Margin="10,0,0,0"
                                SelectedDate="{Binding Filters.SelectedDate, Mode=TwoWay}" />
                        </StackPanel>

                        <!--  Search  -->
                        <StackPanel Margin="0,5" Orientation="Horizontal">
                            <TextBlock
                                Width="100"
                                VerticalAlignment="Center"
                                Text="Search" />
                            <ComboBox
                                Width="200"
                                ItemContainerStyle="{StaticResource CustomComboItem}"
                                SelectedIndex="{Binding Filters.MailboxIndex, Mode=TwoWay}"
                                Style="{StaticResource CustomCombo}">
                                <ComboBoxItem Content="All Mail" />
                                <ComboBoxItem Content="Inbox" />
                                <ComboBoxItem Content="Sent" />
                            </ComboBox>
                        </StackPanel>

                        <!--  Footer  -->
                        <StackPanel
                            Margin="0,15,0,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <CheckBox
                                Margin="0,0,20,0"
                                Content="Has attachment"
                                Foreground="{DynamicResource TextBrush}"
                                IsChecked="{Binding Filters.HasAttachment, Mode=TwoWay}" />
                            <Button
                                Width="100"
                                Margin="0,0,10,0"
                                Content="Create filter" />
                            <Button Width="80" Content="Search" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Popup>

        </StackPanel>


        <!--  Accounts  -->
        <Button
            x:Name="AccountSettingsButton"
            Grid.Row="0"
            Grid.Column="1"
            Width="auto"
            Height="auto"
            Margin="0,0,20,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Click="Button_Click">
            <TextBlock>
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <!--  default: SelectedAccount.DisplayName  -->
                        <Setter Property="Text" Value="{Binding SelectedAccount.DisplayName}" />
                        <Style.Triggers>
                            <!--  SelectedAccount is null  -->
                            <DataTrigger Binding="{Binding SelectedAccount}" Value="{x:Null}">
                                <Setter Property="Text" Value="Accounts" />
                            </DataTrigger>
                            <!--  DisplayName is empty  -->
                            <DataTrigger Binding="{Binding SelectedAccount.DisplayName}" Value="">
                                <Setter Property="Text" Value="Accounts" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Button>
        <Popup
            x:Name="AccountSettingsPopup"
            AllowsTransparency="True"
            Placement="Bottom"
            PlacementTarget="{Binding ElementName=AccountSettingsButton}"
            PopupAnimation="Slide"
            StaysOpen="True">
            <Border
                Padding="8"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource LightPurple}"
                BorderThickness="1"
                CornerRadius="8">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,6"
                        FontWeight="Bold"
                        Text="Accounts" />
                    <ListView
                        Height="120"
                        ItemsSource="{Binding Accounts}"
                        SelectedItem="{Binding SelectedAccount}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="2"
                                    Padding="6"
                                    Background="White"
                                    CornerRadius="5">
                                    <TextBlock FontWeight="Medium" Text="{Binding DisplayName}" />
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Button Margin="0,8,0,0" Command="{Binding AddGoogleCommand}">Add Google</Button>
                    <Button Margin="0,8,0,0" Command="{Binding AddMicrosoftCommand}">Add Microsoft</Button>

                    <Button Margin="0,4,0,0" Command="{Binding RemoveAccountCommand}">Remove Account</Button>
                </StackPanel>
            </Border>
        </Popup>
        <StackPanel
            Width="Auto"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button
                HorizontalAlignment="Left"
                Command="{Binding ComposeCommand}"
                Content="New Mail" />
            <Button Command="{Binding PreviousCommand}" Content="Prev" />
            <Button Command="{Binding NextCommand}" Content="Next" />


            <Button
                x:Name="ThemeToggle"
                HorizontalAlignment="Left"
                Click="ThemeToggle_Click"
                Content="Theme" />
            <Popup
                x:Name="ThemePopup"
                AllowsTransparency="True"
                Placement="Bottom"
                PlacementTarget="{Binding ElementName=ThemeToggle}"
                PopupAnimation="Fade"
                StaysOpen="False">
                <Border
                    Padding="8"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,6"
                            FontWeight="Bold"
                            Text="Choose theme" />
                        <Button
                            x:Name="LightModeBtn"
                            Width="160"
                            Click="LightModeBtn_Click"
                            Content="Light Mode" />
                        <Button
                            x:Name="DarkModeBtn"
                            Width="160"
                            Margin="0,6,0,0"
                            Click="DarkModeBtn_Click"
                            Content="Dark Mode" />
                    </StackPanel>
                </Border>
            </Popup>
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock Text="{Binding CurrentPage}" />
                <TextBlock Text="/" />
                <TextBlock Text="{Binding TotalPages}" />
            </StackPanel>
        </StackPanel>


    </Grid>
</Window>