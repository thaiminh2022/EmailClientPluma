<Window
    x:Class="EmailClientPluma.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:EmailClientPluma.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EmailClientPluma"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:EmailClientPluma.MVVM.ViewModels"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="Pluma Mail"
    Width="900"
    Height="550"
    Background="#F7F4FB"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource GBTB}" />
    </Window.Resources>


    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--  Filter  -->
        <Grid Grid.Row="1"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"
                                  x:Name="LeftColumn"/>
                <ColumnDefinition x:Name="CenterColumn"
                                  Width="*"/>
                <ColumnDefinition x:Name="RightColumn"
                                  Width="auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0">
                <StackPanel VerticalAlignment="top" Margin="5,0,5,0">
                    <Button x:Name="InboxBtn" Margin="0,0,0,2"
                            Content="Inbox"/>
                    <Button x:Name="FlagBtn" Margin="0,0,0,2"
                            Content="Flagged"/>
                    <Button x:Name="SentBtn" Margin="0,0,0,2"
                            Content="Sent"/>
                    <Button x:Name="DraftsBtn" Margin="0,0,0,2"
                            Content="Drafts"/>
                    <Button x:Name="ImportantBtn" Margin="0,0,0,2"
                            Content="Important"/>
                    <Button x:Name="SchelduledBtn" Margin="0,0,0,2"
                            Content="Scheduled"/>
                    <Button x:Name="SpamBtn" Margin="0,0,0,2"
                            Content="Spam"/>
                    <Button x:Name="TrashBtn" Margin="0,0,0,2"
                            Content="Trash"/>
                    <Separator
                        Height="5"
                        Margin="0,2"
                        Background="{DynamicResource TextBrush}"
                        Opacity="1"/>
                    <TextBlock x:Name="CategoryTB" FontSize="14" FontWeight="Bold"
                               Text="Category"/>
                    <Button x:Name="AdBtn" Margin="0,2"
                            Content="Ad"/>
                    <Button x:Name="SocialBtn" Margin="0,2"
                            Content="Social"/>
                    <Button x:Name="ForumBtn" Margin="0,2"
                            Content="Forum"/>
                    <Button x:Name="PromotionBtn" Margin="0,2"
                            Content="Promotion"/>
                    <Separator
                        Height="5"
                        Margin="0,2"
                        Background="{DynamicResource TextBrush}"
                        Opacity="1"/>
                    <StackPanel x:Name="LabelSt" Orientation="Vertical"
                                VerticalAlignment="Center">
                        <Button Margin="0,0,0,2"
                        Content="Create new label"/>
                        <TextBlock FontWeight="Bold"
                        Text="Labels"/>
                        <ListView/>
                    </StackPanel>


                 </StackPanel>
            </Border>

            <!--  Center panel  -->
            <Border
                Grid.Column="1"
                Margin="0,0,10,0"
                Padding="8"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource LightPurple}"
                BorderThickness="1"
                CornerRadius="8">
                <Grid>
                    <ListView
                        x:Name="EmailList"
                        Grid.Row="2"
                        Margin="0,0,0,0"
                        ItemsSource="{Binding FilteredEmails}"
                        SelectedItem="{Binding SelectedEmail}"
                        SelectionChanged="EmailList_SelectionChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="2"
                                    Padding="6"
                                    BorderThickness="0.5"
                                    CornerRadius="5">
                                    <TextBlock
                                        Foreground="{DynamicResource TextBrush}"
                                        Text="{Binding MessageParts.Subject}"
                                        TextTrimming="CharacterEllipsis"/>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!--  Right panel  -->
            <Border
                x:Name="RightPanel"
                Grid.Column="2"
                Background="White"
                BorderBrush="{DynamicResource PanelBackgroundBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--  Toolbar  -->
                    <Button
                        x:Name="CloseBtn"
                        Width="50"
                        HorizontalAlignment="Left"
                        Click="CloseBtn_Click"
                        Content="Close"/>
                    <StackPanel
                        Margin="0,0,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">

                        <ToggleButton Margin="5,0"
                                      Background="{DynamicResource AccentBrush}">
                            IsFlag
                        </ToggleButton>
                        <Button Command="{Binding ReplyCommand}">Reply</Button>

                    </StackPanel>


                    <!--  Email header  -->
                    <StackPanel
                        Grid.Row="1"
                        Margin="10,0"
                        DataContext="{Binding SelectedEmail}">
                        <StackPanel.Style>
                            <Style TargetType="{x:Type StackPanel}">
                                <Setter Property="Visibility"
                                        Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding}"
                                                 Value="{x:Null}">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontWeight="Bold"
                                       Text="Date: "/>
                            <TextBlock Text="{Binding MessageParts.DateDisplay}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontWeight="Bold"
                                       Text="From: "/>
                            <TextBlock Text="{Binding MessageParts.From}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontWeight="Bold"
                                       Text="To: "/>
                            <TextBlock Text="{Binding MessageParts.To}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontWeight="Bold"
                                       Text="Subject: "/>
                            <TextBlock Text="{Binding MessageParts.Subject}"/>
                        </StackPanel>
                    </StackPanel>

                    <!--  Body  -->
                    <Border
                        Grid.Row="2"
                        Margin="0,10,0,0"
                        Style="{StaticResource WebViewContainerStyle}">
                        <wv2:WebView2 behaviors:WebView2Html.Html="{Binding SelectedEmail.MessageParts.Body}"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!--  Search  -->
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="0,10,0,0"
            Orientation="Horizontal">
            <TextBlock  FontWeight="Bold" VerticalAlignment="Center"
                        FontSize="16"
                       Text="Search Mail"/>
            <TextBox
                Width="200"
                Height="25"
                Margin="10,0,0,0"
                Text="{Binding Filters.SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            <Button
                x:Name="MoreSearch"
                Click="MoreSearch_Click"
                Height="25"
                Width="auto"
                Content="..."/>
            <Popup
                x:Name="MoreSearchPopup"
                Placement="Bottom"
                HorizontalOffset="-200"
                PlacementTarget="{Binding ElementName=MoreSearch}"
                PopupAnimation="Scroll"
                StaysOpen="False">
                <Border BorderThickness="3" BorderBrush="{DynamicResource TextBrush}">
                    <StackPanel Margin="0,0,0,0">
                        <!--  From  -->
                        <StackPanel Margin="0,5"
                                    Orientation="Horizontal">
                            <TextBlock
                                Width="100"
                                VerticalAlignment="Center"
                                Text="From"/>
                            <TextBox Width="300"
                                     Text="{Binding Filters.From, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!--  To  -->
                        <StackPanel Margin="0,5"
                                    Orientation="Horizontal">
                            <TextBlock
                                Width="100"
                                VerticalAlignment="Center"
                                Text="To"/>
                            <TextBox Width="300"
                                     Text="{Binding Filters.To, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!--  Subject  -->
                        <StackPanel Margin="0,5"
                                    Orientation="Horizontal">
                            <TextBlock
                                Width="100"
                                VerticalAlignment="Center"
                                Text="Subject"/>
                            <TextBox Width="300"
                                     Text="{Binding Filters.Subject, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!--  Has the words  -->
                        <StackPanel Margin="0,5"
                                    Orientation="Horizontal">
                            <TextBlock
                                Width="100"
                                VerticalAlignment="Center"
                                Text="Has the words"/>
                            <TextBox Width="300"
                                     Text="{Binding Filters.HasWords, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!--  Doesn’t have  -->
                        <StackPanel Margin="0,5"
                                    Orientation="Horizontal">
                            <TextBlock 
                                Width="100"
                                VerticalAlignment="Center"
                                Text="Doesn’t have"/>
                            <TextBox Width="300"
                                     Text="{Binding Filters.DoesNotHave, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!--  Size  -->
                        <StackPanel Margin="0,5"
                                    Orientation="Horizontal">
                            <TextBlock
                                Width="100"
                                VerticalAlignment="Center"
                                Text="Size"/>
                            <ComboBox
                                Width="100"
                                ItemContainerStyle="{StaticResource CustomComboItem}"
                                SelectedIndex="{Binding Filters.SizeOperatorIndex, Mode=TwoWay}"
                                Style="{StaticResource CustomCombo}">
                                <ComboBoxItem Content="greater than"/>
                                <ComboBoxItem Content="less than"/>
                            </ComboBox>
                            <TextBox
                                Width="60"
                                Margin="10,0"
                                Text="{Binding Filters.SizeValue, UpdateSourceTrigger=PropertyChanged}"/>
                            <ComboBox
                                Width="70"
                                ItemContainerStyle="{StaticResource CustomComboItem}"
                                SelectedIndex="{Binding Filters.SizeUnitIndex, Mode=TwoWay}"
                                Style="{StaticResource CustomCombo}">
                                <ComboBoxItem Content="MB"/>
                                <ComboBoxItem Content="KB"/>
                            </ComboBox>
                        </StackPanel>

                        <!--  Date  -->
                        <StackPanel Margin="0,5"
                                    Orientation="Horizontal">
                            <TextBlock
                                Width="100"
                                VerticalAlignment="Center"
                                Text="Date within"/>
                            <ComboBox
                                Width="150"
                                ItemContainerStyle="{StaticResource CustomComboItem}"
                                SelectedIndex="{Binding Filters.DateRangeIndex, Mode=TwoWay}"
                                Style="{StaticResource CustomCombo}">
                                <ComboBoxItem Content="1 day"/>
                                <ComboBoxItem Content="1 week"/>
                                <ComboBoxItem Content="1 month"/>
                            </ComboBox>
                            <DatePicker
                                Width="120"
                                Margin="10,0,0,0"
                                SelectedDate="{Binding Filters.SelectedDate, Mode=TwoWay}"/>
                        </StackPanel>

                        <!--  Search  -->
                        <StackPanel Margin="0,5"
                                    Orientation="Horizontal">
                            <TextBlock
                                Width="100"
                                VerticalAlignment="Center"
                                Text="Search"/>
                            <ComboBox
                                Width="200"
                                ItemContainerStyle="{StaticResource CustomComboItem}"
                                SelectedIndex="{Binding Filters.MailboxIndex, Mode=TwoWay}"
                                Style="{StaticResource CustomCombo}">
                                <ComboBoxItem Content="All Mail"/>
                                <ComboBoxItem Content="Inbox"/>
                                <ComboBoxItem Content="Sent"/>
                            </ComboBox>
                        </StackPanel>

                        <!--  Footer  -->
                        <StackPanel
                            Margin="0,15,0,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <CheckBox
                                Margin="0,0,20,0"
                                Content="Has attachment"
                                Foreground="{DynamicResource TextBrush}"
                                IsChecked="{Binding Filters.HasAttachment, Mode=TwoWay}"/>
                            <Button
                                Width="100"
                                Margin="0,0,10,0"
                                Content="Create filter"/>
                            <Button Width="80"
                                    Content="Search"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Popup>

        </StackPanel>


        <!--  Accounts  -->
        <Button x:Name="AccountSettingsButton"
                Grid.Row="0"
                Grid.Column="1"
                Width="auto"
                Height="35"
                Margin="0,10,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Click="Button_Click"
        >
            <TextBlock>
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <!-- default: SelectedAccount.DisplayName -->
                        <Setter Property="Text"
                                Value="{Binding SelectedAccount.DisplayName}" />
                        <Style.Triggers>
                            <!-- SelectedAccount is null -->
                            <DataTrigger Binding="{Binding SelectedAccount}"
                                         Value="{x:Null}">
                                <Setter Property="Text"
                                        Value="Accounts" />
                            </DataTrigger>
                            <!-- DisplayName is empty -->
                            <DataTrigger Binding="{Binding SelectedAccount.DisplayName}"
                                         Value="">
                                <Setter Property="Text"
                                        Value="Accounts" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
                </TextBlock>
        </Button>
        <Popup
            x:Name="AccountSettingsPopup"
            AllowsTransparency="True"
            Placement="Bottom"
            HorizontalOffset="-100"
            PlacementTarget="{Binding ElementName=AccountSettingsButton}"
            PopupAnimation="Slide"
            StaysOpen="False">
            <Border
                Padding="8"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource LightPurple}"
                BorderThickness="1"
                CornerRadius="8">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,6"
                        FontWeight="Bold"
                        Text="Accounts"/>
                    <ListView
                        Height="120"
                        ItemsSource="{Binding Accounts}"
                        SelectedItem="{Binding SelectedAccount}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="2"
                                    Padding="6"
                                    CornerRadius="5">
                                    <TextBlock FontWeight="Medium"
                                               Text="{Binding DisplayName}"/>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Button Margin="0,8,0,0"
                            Command="{Binding WhichProvCMD}">Add Account</Button>
                    <Button Margin="0,4,0,0"
                            Command="{Binding RemoveAccountCommand}">Remove Account</Button>
                </StackPanel>
            </Border>
        </Popup>
        <StackPanel
            Margin="10,10,0,0"
            Width="Auto"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button
                Style="{DynamicResource {x:Type Button}}"
                HorizontalAlignment="Left"
                Command="{Binding ComposeCommand}">
                <Image x:Name="ComposeIcon"
                        Source="Images/White/pen.png"
                       Width="24"
                       Height="24"/>
            </Button>

            <Button
                x:Name="SettingsButton"
                Background="{DynamicResource PrimaryBrush}"
                Foreground="{DynamicResource ButtonForegroundBrush}"
                Command="{Binding SettingCommand}"
                Width="auto" Height="35">
                <Image x:Name="SettingsIcon"
                        Source="Images/White/settings.png"
                       Width="24"
                       Height="24"/>
            </Button>
          
            <Button Command="{Binding PreviousCommand}"
                    Width="auto"
                    >
                <Image x:Name="PreviousIcon" Source="Images/White/arrow_back.png"/>
            </Button>
            <Button Command="{Binding NextCommand}"
                    >
                <Image x:Name="ForwardIcon" Source="Images/White/arrow_forward.png"/>
            </Button>
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                <TextBlock Text="{Binding CurrentPage}" />
                <TextBlock Text="/" />
                <TextBlock Text="{Binding TotalPages}" />
            </StackPanel>
        </StackPanel>


    </Grid>
</Window>