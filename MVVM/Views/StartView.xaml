<Window x:Class="EmailClientPluma.MVVM.Views.StartView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behaviors="clr-namespace:EmailClientPluma.Behaviors"
        xmlns:converters="clr-namespace:EmailClientPluma.Converters"
        xmlns:viewmodels="clr-namespace:EmailClientPluma.MVVM.ViewModels"
        xmlns:local="clr-namespace:EmailClientPluma.MVVM.Views"
        mc:Ignorable="d"
        Title="StartView" Height="450" Width="800">
    <Window.DataContext>
        <viewmodels:StartViewModel />
    </Window.DataContext>
    <Grid>
        <StackPanel VerticalAlignment="Center">
        <TextBlock
            Margin="0,20,0,20"
            HorizontalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Text="Select an Account to Continue" />
        <ListView
            Height="120"
            Width="300"
            ItemsSource="{Binding Accounts}"
            SelectedItem="{Binding SelectedAccount, Mode=TwoWay}" SelectionChanged="ListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border
                Margin="2"
                Padding="6"
                CornerRadius="5">
                        <TextBlock FontWeight="Medium" Text="{Binding DisplayName}" />
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
            </ListView>
            <TextBlock  TextAlignment="Center" FontSize="20" FontWeight="Bold"
                       Text="Don't have one? Add one from a provider"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button
                    Width="160"
                    Margin="10,0,10,0"
                    Command="{Binding AddAccountGoogleCommand}"
                    Content="Add Google Account" />
                <Button
                    Width="160"
                    Margin="10,0,10,0"
                    Command="{Binding AddAccountMicrosoftCommand}"
                    Content="Add Microsoft Account" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
