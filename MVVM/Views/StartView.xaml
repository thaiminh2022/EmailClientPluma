<Window
    x:Class="EmailClientPluma.MVVM.Views.StartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:EmailClientPluma.MVVM.ViewModels"
    Title="Choose your account"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewmodels:StartViewModel />
    </Window.DataContext>
    <Window.Resources>
        <Style BasedOn="{StaticResource GBTB}" TargetType="TextBlock" />
    </Window.Resources>
    <Grid Background="{DynamicResource BackgroundBrush}">
        <StackPanel VerticalAlignment="Center">
            <TextBlock
                x:Name="TitleTextBlock"
                Margin="0,20,0,20"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                TextAlignment="Center" />
            <ListView
                x:Name="AccountsListView"
                Width="300"
                Height="120"
                Background="{DynamicResource PanelBackgroundBrush}"
                ItemsSource="{Binding Accounts}"
                SelectedItem="{Binding SelectedAccount, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="2"
                            Padding="6"
                            CornerRadius="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Display name on the left  -->
                                <TextBlock
                                    Grid.Column="0"
                                    FontWeight="Medium"
                                    Text="{Binding DisplayName}" />

                                <!--  Provider on the right: shows "from Provider(Google)"  -->
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    VerticalAlignment="Center"
                                    Foreground="Gray"
                                    Text="{Binding Provider, StringFormat=from Provider({0})}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBlock
                FontSize="20"
                FontWeight="Bold"
                Text="Don't have one? Add one from a provider"
                TextAlignment="Center" />
            <StackPanel
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Orientation="Vertical">
                <Button
                    Width="200"
                    Margin="10,0,10,10"
                    Command="{Binding AddAccountGoogleCommand}">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Background="{DynamicResource PrimaryBrush}"
                        Orientation="Horizontal">
                        <Image
                            Width="20"
                            Height="20"
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            Source="Images/Provider/google.png"
                            Stretch="Uniform" />
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource ButtonForegroundBrush}"
                            Text="Add Google Account" />
                    </StackPanel>
                </Button>
                <Button
                    Width="200"
                    Margin="10,0,10,10"
                    Command="{Binding AddAccountMicrosoftCommand}">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Background="{DynamicResource PrimaryBrush}"
                        Orientation="Horizontal">
                        <Image
                            Width="20"
                            Height="20"
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            Source="Images/Provider/microsoft.png"
                            Stretch="Uniform" />
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource ButtonForegroundBrush}"
                            Text="Add Microsoft Account" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
