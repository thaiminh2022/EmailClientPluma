<Window
    x:Class="EmailClientPluma.MVVM.Views.NewEmailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:EmailClientPluma.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:EmailClientPluma.MVVM.ViewModels"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="New Email"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewmodels:NewEmailViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style BasedOn="{StaticResource GBTB}" TargetType="TextBlock" />
    </Window.Resources>

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="149*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel>
            <Grid Margin="10" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <!--  labels  -->
                    <ColumnDefinition Width="*" />
                    <!--  inputs  -->
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <!--  From  -->
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontFamily="Microsoft Sans Serif"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="From" />
                <!--  right margin for gap  -->
                <ComboBox
                    Grid.Row="0"
                    Grid.Column="1"
                    MinWidth="300"
                    Margin="0,4,0,4"
                    HorizontalAlignment="Stretch"
                    IsEnabled="{Binding IsEnable}"
                    ItemsSource="{Binding Accounts}"
                    SelectedItem="{Binding SelectedAccount}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Email}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <!--  To  -->
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontFamily="Microsoft Sans Serif"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="To" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    MinWidth="300"
                    Margin="0,4,0,4"
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource PanelBackgroundBrush}"
                    Foreground="{DynamicResource TextBrush}"
                    IsEnabled="{Binding IsEnable}"
                    Text="{Binding ToAddresses}" />
                <!--  Subject  -->
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontFamily="Microsoft Sans Serif"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Subject" />
                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    MinWidth="300"
                    Margin="0,4,0,4"
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource PanelBackgroundBrush}"
                    Foreground="{DynamicResource TextBrush}"
                    Text="{Binding Subject}" />
            </Grid>
        </StackPanel>
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <!--  Background image  -->
            <Image
                IsHitTestVisible="True"
                Opacity="1"
                Stretch="UniformToFill" />
            <!--  Main TextBox  -->

            <TabControl>
                <TabItem Header="Normal Mode">
                    <wv2:WebView2
                        behaviors:WebView2Editor.EnableBinding="True"
                        behaviors:WebView2Editor.HtmlContent="{Binding Body}"
                        behaviors:Webview2ColorScheme.PreferredScheme="{Binding CurrentAppTheme}" />
                </TabItem>
                <TabItem Header="Select Reply" IsEnabled="{Binding IsNotEnable}">
                    <wv2:WebView2
                        behaviors:WebView2SelectEditor.EmailContent="{Binding ReplyToEmail}"
                        behaviors:WebView2SelectEditor.EnableBinding="True"
                        behaviors:WebView2SelectEditor.HtmlContent="{Binding Body}"
                        behaviors:Webview2ColorScheme.PreferredScheme="{Binding CurrentAppTheme}" />
                </TabItem>
            </TabControl>
        </Grid>
        <StackPanel
            Grid.Row="2"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button Command="{Binding SendCommand}">
                Send
            </Button>
            <Button Margin="5,0,0,0" Command="{Binding CancelCommand}">
                Cancel
            </Button>

        </StackPanel>
    </Grid>
</Window>