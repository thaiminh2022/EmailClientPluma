<Window
    x:Class="EmailClientPluma.MVVM.Views.NewEmailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:EmailClientPluma.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EmailClientPluma.MVVM.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:EmailClientPluma.MVVM.ViewModels"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="New Email"
    
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewmodels:NewEmailViewModel />
        
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions />
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="149*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel>
            <Grid Margin="10" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <!--  labels  -->
                    <ColumnDefinition Width="*" />
                    <!--  inputs  -->
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <!--  From  -->
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontFamily="Microsoft Sans Serif"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="From" />
                <!--  right margin for gap  -->
                <ComboBox
                    Grid.Row="0"
                    Grid.Column="1"
                    MinWidth="300"
                    Margin="0,4,0,4"
                    HorizontalAlignment="Stretch"
                          IsEnabled="{Binding IsEnable}"
                    ItemsSource="{Binding Accounts}"
                    SelectedItem="{Binding SelectedAccount}"
                    >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Email}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <!--  To  -->
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontFamily="Microsoft Sans Serif"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="To" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    MinWidth="300"
                    Margin="0,4,0,4"
                    HorizontalAlignment="Stretch"
                    Text="{Binding ToAddresses}"
                    IsEnabled="{Binding IsEnable}" />
                <!--  Subject  -->
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontFamily="Microsoft Sans Serif"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Subject" />
                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    MinWidth="300"
                    Margin="0,4,0,4"
                    HorizontalAlignment="Stretch"
                    Text="{Binding Subject}" />
            </Grid>
        </StackPanel>
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <!--  Background image  -->
            <Image
                IsHitTestVisible="True"
                Opacity="1"
                Stretch="UniformToFill" />
            <!--  Main TextBox  -->
            
            <TabControl>
                <TabItem Header="Normal Mode">
                    <wv2:WebView2 behaviors:WebView2Editor.EnableBinding="True"
                                  behaviors:WebView2Editor.HtmlContent="{Binding Body}" />
                </TabItem>
                <TabItem Header="Select Reply">
                    <wv2:WebView2 behaviors:WebView2SelectEditor.EnableBinding="True"
                                  behaviors:WebView2SelectEditor.HtmlContent="{Binding Body}" 
                                  behaviors:WebView2SelectEditor.EmailContent="{Binding ReplyToEmail}"
                                  />
                </TabItem>
                
            </TabControl>
            <Button
                x:Name="AttachButton"
                
                Margin="216,-7,536,283"
                Content="+" RenderTransformOrigin="0.734,-2.701"
                Panel.ZIndex="10"
                />
            <Button
                 x:Name="UnattachButton"
                 Margin="267,-7,485,283"
                 Content="X" RenderTransformOrigin="0.734,-2.701"
                 Panel.ZIndex="10"
            />

        </Grid>
        <StackPanel
            Grid.Row="2"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button
                Background="#0b57d0"
                Command="{Binding SendCommand}"
                Foreground="White">
                Send
            </Button>
            <Button
                Margin="5,0,0,0"
                Background="#0b57d0"
                Command="{Binding CancelCommand}"
                Foreground="White">
                Cancel
            </Button>

        </StackPanel>
        <Button
            x:Name="OptionsButton"
            Grid.Row="2"
            Margin="10,0,0,0"
            HorizontalAlignment="Right"
            Click="OptionsButton_Click">
            Options
        </Button>
        <!--  Option popup  -->
        <Popup
            x:Name="OptionsPopup"
            AllowsTransparency="True"
            Placement="Top"
            PlacementTarget="{Binding ElementName=OptionsButton}"
            PopupAnimation="Slide"
            StaysOpen="False">
            <Border
                Padding="10"
                Background="WhiteSmoke"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="8">
                <StackPanel>
                    <Button Margin="0,0,0,5" Content="Check for Spelling" />
                    <Button
                        x:Name="LabelsButton"
                        Click="LabelsButton_Click"
                        Content="Labels" />
                </StackPanel>
            </Border>
        </Popup>
        <!--  Label submenu  -->
        <Popup
            x:Name="LabelsPopup"
            AllowsTransparency="True"
            Placement="Right"
            PlacementTarget="{Binding ElementName=LabelsButton}"
            PopupAnimation="Slide"
            StaysOpen="False">
            <Border
                Padding="10"
                Background="WhiteSmoke"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="8">
                <StackPanel Width="200">
                    <TextBlock
                        Margin="0,0,0,8"
                        FontWeight="Bold"
                        Text="Create Label" />
                    <TextBox x:Name="LabelNameBox" Margin="0,0,0,10" />
                    <TextBlock
                        Margin="0,0,0,4"
                        FontWeight="SemiBold"
                        Text="Category" />
                    <CheckBox Margin="0,2" Content="Ad" />
                    <CheckBox Margin="0,2" Content="Social" />
                    <CheckBox Margin="0,2" Content="Forum" />
                    <CheckBox Margin="0,2" Content="Promotions" />
                    <Button
                        Margin="0,8,0,0"
                        HorizontalAlignment="Right"
                        Content="Save" />
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>