<Window
    x:Class="EmailClientPluma.MVVM.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EmailClientPluma.MVVM.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:EmailClientPluma.MVVM.ViewModels"
    Title="Settings"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewmodels:SettingsViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style BasedOn="{StaticResource GBTB}" TargetType="TextBlock" />
    </Window.Resources>

    <DockPanel Background="{DynamicResource PanelBackgroundBrush}">

        <!--  HEADER  -->
        <Border
            Height="52"
            Padding="10"
            Background="{DynamicResource BackgroundBrush}"
            BorderBrush="{DynamicResource AccentBrush}"
            BorderThickness="0,0,0,1"
            DockPanel.Dock="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="{DynamicResource TextBrush}"
                    Text="Settings" />
                <Button Grid.Column="1" Command="{Binding SaveCommand}">Save Settings</Button>
            </Grid>

        </Border>


        <!--  MAIN TABS  -->
        <TabControl Padding="0" BorderThickness="0">
            <!--  GENERAL  -->
            <TabItem Header="General">
                <StackPanel Margin="20">
                    <GroupBox
                        BorderBrush="{DynamicResource TextBrush}"
                        BorderThickness="1"
                        Header="Appearance">
                        <StackPanel Margin="10">
                            <DockPanel>
                                <TextBlock Width="200" Text="Theme" />
                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                    <Button
                                        x:Name="LightModeBtn"
                                        Width="160"
                                        Click="LightModeBtn_Click"
                                        Content="Light Mode" />
                                    <Button
                                        x:Name="DarkModeBtn"
                                        Width="160"
                                        Margin="0,0,0,0"
                                        Click="DarkModeBtn_Click"
                                        Content="Dark Mode" />
                                </StackPanel>
                            </DockPanel>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox
                        BorderBrush="{DynamicResource TextBrush}"
                        BorderThickness="1"
                        Header="Sync Refresh">
                        <StackPanel Margin="10">
                            <DockPanel>
                                <TextBlock Width="200" Text="Auto refresh (seconds)" />
                                <TextBox Width="100" Text="{Binding AutoRefreshSecs, FallbackValue=30}" />
                            </DockPanel>
                            <CheckBox Content="Background message sync" IsChecked="{Binding BackgroundMessageSync, FallbackValue=True}" />
                            <CheckBox Content="Increase polling time when idle for too long" IsChecked="{Binding IncreasePollingWhileIdleTooLong, FallbackValue=True}" />
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>

            <!--  ACCOUNTS  -->
            <TabItem Header="Accounts">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <!--  Add button  -->
                        <RowDefinition Height="Auto" />
                        <!--  Scrollable content  -->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Button Margin="0,5" Command="{Binding AddAccountCommand}">Add Account</Button>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <GroupBox
                                BorderBrush="{DynamicResource TextBrush}"
                                BorderThickness="1"
                                Header="Google Accounts">
                                <StackPanel Margin="10">
                                    <StackPanel Orientation="Horizontal">
                                        <Button Command="{Binding RemoveGoogleAccountCommand}" Content="Remove" />
                                    </StackPanel>
                                    <ListView
                                        ItemsSource="{Binding GoogleAccounts}"
                                        SelectedItem="{Binding SelectedAccount}"
                                        SelectionMode="Single">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBlock FontWeight="Bold" Text="{Binding DisplayName}" />
                                                    <TextBlock FontSize="11" Text="{Binding Email}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox
                                BorderBrush="{DynamicResource TextBrush}"
                                BorderThickness="1"
                                Header="Microsoft Accounts">
                                <StackPanel Margin="10">
                                    <StackPanel Orientation="Horizontal">
                                        <Button Command="{Binding RemoveMicrosoftAccountCommand}" Content="Remove" />
                                    </StackPanel>
                                    <ListView
                                        ItemsSource="{Binding MicrosoftAccounts}"
                                        SelectedItem="{Binding SelectedAccount}"
                                        SelectionMode="Single">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBlock FontWeight="Bold" Text="{Binding DisplayName}" />
                                                    <TextBlock FontSize="11" Text="{Binding Email}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>


                </Grid>
            </TabItem>

            <!--  SECURITY  -->
            <TabItem Header="Security">
                <StackPanel Margin="20">
                    <GroupBox
                        BorderBrush="{DynamicResource TextBrush}"
                        BorderThickness="1"
                        Header="Phishing Protection">
                        <StackPanel Margin="10">
                            <CheckBox Content="Use built in phishing detector" IsChecked="{Binding UsePhishingDetector, FallbackValue=True}" />
                        </StackPanel>
                    </GroupBox>


                </StackPanel>
            </TabItem>
            <!--  STORAGE  -->
            <TabItem Header="Storage">
                <StackPanel Margin="20">
                    <GroupBox
                        BorderBrush="{DynamicResource TextBrush}"
                        BorderThickness="1"
                        Header="App Data">
                        <StackPanel Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <Button Margin="0,0,5,0" Command="{Binding OpenAttachmentsFolder}">Open attachments folder</Button>
                                <Button Margin="0" Command="{Binding OpenDatabaseFolder}">Open data folder</Button>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox
                        BorderBrush="{DynamicResource TextBrush}"
                        BorderThickness="1"
                        Header="Log files">
                        <StackPanel Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <Button Margin="0" Command="{Binding OpenLogFolder}">Open logs folder</Button>
                            </StackPanel>
                            <Button Margin="0,5" Command="{Binding DeleteLogFolder}">Clear log files</Button>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
