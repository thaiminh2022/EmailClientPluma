<Window
    x:Class="EmailClientPluma.MVVM.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EmailClientPluma.MVVM.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:EmailClientPluma.MVVM.ViewModels"
    Title="Settings"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewmodels:SettingsViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style BasedOn="{StaticResource GBTB}" TargetType="TextBlock" />
    </Window.Resources>

    <DockPanel Background="{DynamicResource PanelBackgroundBrush}">

        <!--  HEADER  -->
        <Border
            Height="52"
            Padding="10"
            Background="{DynamicResource BackgroundBrush}"
            BorderBrush="{DynamicResource AccentBrush}"
            BorderThickness="0,0,0,1"
            DockPanel.Dock="Top">
            <TextBlock
                FontSize="20"
                FontWeight="Bold"
                Foreground="{DynamicResource TextBrush}"
                Text="Settings" />
        </Border>


        <!--  MAIN TABS  -->
        <TabControl Padding="0" BorderThickness="0">
            <!--  GENERAL  -->
            <TabItem Header="General">
                <StackPanel Margin="20">
                    <GroupBox
                        BorderBrush="{DynamicResource TextBrush}"
                        BorderThickness="1"
                        Header="Appearance">
                        <StackPanel Margin="10">
                            <DockPanel>
                                <TextBlock Width="200" Text="Theme" />
                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                    <Button
                                        x:Name="LightModeBtn"
                                        Width="160"
                                        Click="LightModeBtn_Click"
                                        Content="Light Mode" />
                                    <Button
                                        x:Name="DarkModeBtn"
                                        Width="160"
                                        Margin="0,0,0,0"
                                        Click="DarkModeBtn_Click"
                                        Content="Dark Mode" />
                                </StackPanel>
                            </DockPanel>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox
                        BorderBrush="{DynamicResource TextBrush}"
                        BorderThickness="1"
                        Header="Sync Refresh">
                        <StackPanel Margin="10">
                            <DockPanel>
                                <TextBlock Width="200" Text="Auto refresh (seconds)" />
                                <TextBox Width="100" Text="60" />
                            </DockPanel>
                            <CheckBox Content="Background message sync" />
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>

            <!--  ACCOUNTS  -->
            <TabItem Header="Accounts">
                <StackPanel Margin="20">
                    <GroupBox
                        BorderBrush="{DynamicResource TextBrush}"
                        BorderThickness="1"
                        Header="Google Account">
                        <StackPanel Margin="10">
                            <Button Width="250" Content="Add Google Account" />
                            <DockPanel Margin="5">
                                <TextBlock
                                    Width="300"
                                    VerticalAlignment="Center"
                                    Text="example@gmail.com" />
                                <Button Content="Remove" />
                            </DockPanel>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>


            <!--  MONITORING  -->
            <TabItem Header="Monitoring">
                <StackPanel Margin="20">
                    <GroupBox
                        BorderBrush="{DynamicResource TextBrush}"
                        BorderThickness="1"
                        Header="Email Monitoring">
                        <StackPanel Margin="10">
                            <CheckBox Content="Enable real-time monitoring" />
                            <CheckBox Content="Show toast notifications" />
                            <CheckBox Content="Play sound on new mail" />
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>

            <!--  SECURITY  -->
            <TabItem Header="Security">
                <StackPanel Margin="20">
                    <GroupBox
                        BorderBrush="{DynamicResource TextBrush}"
                        BorderThickness="1"
                        Header="Phishing Protection">
                        <StackPanel Margin="10">
                            <CheckBox Content="Enable phishing detector" IsChecked="True" />
                        </StackPanel>
                    </GroupBox>


                </StackPanel>
            </TabItem>


        </TabControl>
    </DockPanel>
</Window>
