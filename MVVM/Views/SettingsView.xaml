<Window x:Class="EmailClientPluma.MVVM.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailClientPluma.MVVM.Views"
        xmlns:viewmodels="clr-namespace:EmailClientPluma.MVVM.ViewModels"
        mc:Ignorable="d"
        Title="SettingsView" Height="450" Width="800">
    <Window.DataContext>
        <viewmodels:SettingsViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Settings"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>

        <!-- Settings Sections -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <!-- General Settings -->
                <GroupBox Header="General" Margin="0,0,0,20"
                          Background="{DynamicResource PanelBackgroundBrush}"
                          Foreground="{DynamicResource TextBrush}">
                    <StackPanel Margin="10">
                        <CheckBox Content="Enable notifications" Margin="0,5"/>
                        <CheckBox Content="Auto-sync emails" Margin="0,5"/>
                        <CheckBox Content="Show preview pane" Margin="0,5"/>
                    </StackPanel>
                </GroupBox>

                <!-- Appearance -->
                <GroupBox Header="Appearance" Margin="0,0,0,20"
                          Background="{DynamicResource PanelBackgroundBrush}"
                          Foreground="{DynamicResource TextBrush}">
                    <StackPanel Margin="10">
                        <TextBlock Text="Theme:" Margin="0,5"/>
                        <ComboBox SelectedIndex="0" Width="200"
                                  Style="{DynamicResource CustomCombo}">
                            <ComboBoxItem Style="{DynamicResource CustomComboItem}">Light</ComboBoxItem>
                            <ComboBoxItem Style="{DynamicResource CustomComboItem}">Dark</ComboBoxItem>
                            <ComboBoxItem Style="{DynamicResource CustomComboItem}">System Default</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>

                <!-- Account -->
                <GroupBox Header="Account" Margin="0,0,0,20"
                          Background="{DynamicResource PanelBackgroundBrush}"
                          Foreground="{DynamicResource TextBrush}">
                    <StackPanel Margin="10">
                        <TextBlock Text="Default email account:" Margin="0,5"/>
                        <ComboBox Width="300"
                                  Style="{DynamicResource CustomCombo}">
                            <ComboBoxItem Style="{DynamicResource CustomComboItem}">thinh@gmail.com</ComboBoxItem>
                            <ComboBoxItem Style="{DynamicResource CustomComboItem}">work@company.com</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Width="100" Margin="5"/>
            <Button Content="Save" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
