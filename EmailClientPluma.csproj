  </ItemGroup>

    <ItemGroup>
        <Content Include="pluma-icon.ico" />
        <Content Include="QuillEditor\quillEditor.html">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <Content Include="QuillEditor\quillEditor.js">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <Content Include="QuillEditor\quilljs.js">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="QuillEditor\selectReplyEditor.html">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <Content Include="QuillEditor\selectReplyEditor.js">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <Content Include="QuillEditor\style.css">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Azure.Identity" Version="1.17.1" />
        <PackageReference Include="Dapper" Version="2.1.66" />
        <PackageReference Include="Google.Apis" Version="1.73.0" />
        <PackageReference Include="Google.Apis.Auth" Version="1.73.0" />
        <PackageReference Include="Google.Apis.Gmail.v1" Version="1.73.0.3987" />
        <PackageReference Include="Google.Apis.Oauth2.v2" Version="1.68.0.1869" />
